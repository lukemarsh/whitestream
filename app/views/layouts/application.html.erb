<!DOCTYPE html>
<html>
<head>
  <title>Whitestream</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0">
</head>
<% if current_admin %>
  <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>
<% end %>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
  <li>
    <%= link_to('Edit registration', edit_user_registration_path) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
  <li>
    <%= link_to('Register', new_user_registration_path)  %>
  </li>
<% end %>
<body<%= " id=#{@body_id}" if @body_id %>>
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1&appId=568398906591962";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  <div id="wrapper">
    <header>
      <%= link_to root_url do %>
        <%= image_tag "logo.gif" %>
        <h1>White Stream</h1>
        <p>a deeper meme-ing</p>
      <% end %>
    </header>
    <nav>
      <ul>
        <li><%= link_to "Stream", root_url %></li>
      </ul>
      <ul class="right-menu">
        <li><%= link_to "Contribute", new_meme_url %></li>
      </ul>
    </nav>
    <div id="wrapper-inner">
      <%= yield %>
    </div>
  </div>
  <script src="http://platform.tumblr.com/v1/share.js"></script>
</body>
</html>
