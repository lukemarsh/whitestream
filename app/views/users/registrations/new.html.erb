<% content_for :title do %>Register for an account | <% end %>
<div id="form">
<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :html => {:id => 'registration_form'}, :url => registration_path(resource_name), :remote => :true, :format => :json, :validate => true) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, :class => "form-control" %>
  </div>
  <% if f.object.password_required? %>
    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>
  <% end %>
  <div class="form-group">
    <% if @login %>
      <%= hidden_field_tag :loggin, :id => 'loggin' %>
    <% end %>
    <%= f.submit "Sign up", :class => "btn btn-default" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
